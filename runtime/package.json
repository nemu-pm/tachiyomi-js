{
  "name": "@nemu.pm/tachiyomi-runtime",
  "version": "0.1.0",
  "description": "Runtime for loading and executing Tachiyomi extensions compiled to JavaScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/nemu-pm/tachiyomi-js.git",
    "directory": "runtime"
  },
  "homepage": "https://github.com/nemu-pm/tachiyomi-js#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "bun": {
        "types": "./dist/index.node.d.ts",
        "default": "./dist/index.node.js"
      },
      "node": {
        "types": "./dist/index.node.d.ts",
        "default": "./dist/index.node.js"
      },
      "default": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./async": {
      "browser": {
        "types": "./dist/async/index.d.ts",
        "default": "./dist/async/index.js"
      },
      "bun": {
        "types": "./dist/async/index.node.d.ts",
        "default": "./dist/async/index.node.js"
      },
      "node": {
        "types": "./dist/async/index.node.d.ts",
        "default": "./dist/async/index.node.js"
      },
      "default": {
        "types": "./dist/async/index.d.ts",
        "default": "./dist/async/index.js"
      }
    },
    "./worker": {
      "types": "./dist/async/worker.d.ts",
      "default": "./dist/async/worker.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "tachiyomi",
    "manga",
    "extension",
    "runtime"
  ],
  "license": "MIT",
  "dependencies": {
    "comlink": "^4.4.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "canvas": "^3.0.0-rc3"
  },
  "peerDependencies": {
    "canvas": "^3.0.0-rc3"
  },
  "peerDependenciesMeta": {
    "canvas": {
      "optional": true
    }
  }
}
